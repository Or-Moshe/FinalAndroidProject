<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="input_int" >
        <item name="android:background">#ECEFF3</item> <!-- Set your desired background color -->
        <item name="android:textAlignment">center</item>
        <item name="android:fontWeight">600</item>
        <item name="android:radius">17dp</item>
        <item name="android:backgroundTint">#ECEFF3</item>
        <item name="android:height">50dp</item>
    </style>

    <style name="input_center" >
        <item name="android:background">#ECEFF3</item> <!-- Set your desired background color -->
        <item name="android:textAlignment">center</item>
        <item name="android:fontWeight">600</item>
        <item name="android:radius">17dp</item>
        <item name="android:backgroundTint">#ECEFF3</item>
        <item name="android:height">50dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="input_start" >
        <item name="android:background">#ECEFF3</item> <!-- Set your desired background color -->
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontWeight">600</item>
        <item name="android:radius">17dp</item>
        <item name="android:backgroundTint">#ECEFF3</item>
        <item name="android:height">150dp</item>
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">10dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="input_text_area" >
        <item name="android:background">#ECEFF3</item> <!-- Set your desired background color -->
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontWeight">600</item>
        <item name="android:radius">17dp</item>
        <item name="android:backgroundTint">#ECEFF3</item>
        <item name="android:height">150dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="spinner_style" parent="Widget.AppCompat.Spinner">
        <item name="android:backgroundTint">#ECEFF3</item>
        <item name="android:textColor">#FFF8DC</item>
        <item name="android:height">150dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>

    <style name="text_view" >
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#A5AAB0</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="number_picker" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="ll_horizontal" >
        <item name="android:layout_marginVertical">5dp</item>
    </style>
</resources>